---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection.astro';

interface Project {
  code: string;
  liveLink: string;
  description: string;
  title: string;
  techStack: string;
  previewImage: string;
  additionalImage: string;
}

let projects: Project[] = [];

try {
  const response = await fetch('https://meezaand.github.io/config/config.json');
  if (response.ok) {
    const data = await response.json();
    projects = data.projects || [];
  }
} catch (error) {
  console.error('Error fetching projects data:', error);
}

const tools = {
  languages: ['React.js', 'Vue.js', 'Next.js', 'Nuxt.js', 'JavaScript', 'TypeScript', 'Python', 'Go', 'PHP'],
  frameworks: ['Bootstrap', 'Tailwind CSS', 'Node.js', 'Django', 'Flask', 'Express.js'],
  databases: ['MySQL', 'PostgreSQL', 'MongoDB', 'Firebase'],
  infrastructure: ['Git', 'Docker', 'Linux'],
  practices: ['TDD', 'CI/CD', 'Microservices']
};
---

<Layout 
  title="Software Development - Portfolio" 
  description="Software development is about problem-solving at its core. I focus on creating robust systems, scalable architectures, and elegant APIs that power applications and solve real business challenges."
>
  <section class="min-h-screen flex items-center justify-center pt-24">
    <div class="container-site max-w-5xl mx-auto px-6">
      <!-- Eyebrow -->
      <p
        class="software-eyebrow text-[10px] md:text-xs tracking-[0.3em] uppercase mb-6 font-semibold"
        style="color: #001489;"
      >
        Software Development
      </p>

      <!-- Main Heading -->
      <h1 class="software-heading font-display text-4xl md:text-5xl lg:text-5xl mb-8 leading-tight">
        Building X using Y  to solve <span class="italic" style="color: #001489;">Z.</span>
      </h1>

      <!-- Philosophy Statement -->
      <p
        class="software-description text-foreground/60 text-base md:text-lg lg:text-xl max-w-3xl mb-10 leading-relaxed"
      >
        Software development is about problem-solving at its core. I focus on creating robust systems, scalable architectures, and elegant APIs that power applications and solve real use-cases business challenges.
      </p>

      <!-- Divider -->
      <div class="software-divider mb-16">
        <div class="w-12 h-0.5" style="background-color: #001489;"></div>
      </div>
    </div>
  </section>

  <section class="section-padding bg-muted">
    <div class="container-site max-w-5xl">
      <AnimatedSection className="mb-20">
        <h2 class="software-section-title font-display text-4xl md:text-5xl">Featured Projects<span style="color: #001489;">.</span></h2>
      </AnimatedSection>

      {projects.length > 0 ? (
        <div class="space-y-24">
        {projects.map((project, index) => (
          <AnimatedSection delay={index * 150} className="software-project-item">
            <!-- Project Container -->
            <div class="software-project-card group">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
                <div class="flex flex-col">
                  <h3 class="font-display text-3xl md:text-4xl mb-6 group-hover:text-primary transition-colors">
                    {project.title}
                  </h3>
                  <p class="text-foreground/70 mb-8 leading-relaxed text-lg max-w-xl">
                    {project.description}
                  </p>
                  <div class="flex flex-wrap gap-3 mb-10">
                    {project.techStack.split(' Â· ').map(tech => (
                      <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-primary/10 text-primary border border-primary/20 hover:bg-primary/15 hover:border-primary/30 transition-all">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <div class="flex flex-wrap gap-4">
                    {project.liveLink && (
                      <a 
                        href={project.liveLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-black text-white rounded-sm font-medium hover:opacity-90 hover:gap-3 transition-all"
                      >
                        View Live
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </a>
                    )}
                    {project.code && (
                      <a 
                        href={project.code}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 px-6 py-3 border border-foreground/20 text-foreground/70 rounded-sm font-medium hover:text-foreground hover:border-foreground/40 hover:gap-3 transition-all"
                      >
                        View Code
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                        </svg>
                      </a>
                    )}
                  </div>
                </div>

                <!-- Right Section: Two Images Stacked -->
                <div class="space-y-4">
                  <!-- First Image -->
                  <div class="relative overflow-hidden rounded-lg bg-linear-to-br from-foreground/5 to-foreground/10 group/image">
                    <img 
                      src={project.previewImage} 
                      alt={`${project.title} - Main Preview`}
                      class="w-full h-auto object-contain aspect-video transition-all duration-500 group-hover/image:scale-105"
                    />
                    <!-- Gradient overlay -->
                    <div class="absolute inset-0 bg-linear-to-t from-foreground/20 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                    <!-- Border effect -->
                    <div class="absolute inset-0 border-2 border-transparent group-hover/image:border-primary/30 transition-all duration-300 rounded-lg"></div>
                  </div>

                  <!-- Second Image -->
                  <div class="relative overflow-hidden rounded-lg bg-linear-to-br from-foreground/5 to-foreground/10 group/image">
                    <img 
                      src={project.additionalImage} 
                      alt={`${project.title} - Additional View`}
                      class="w-full h-auto object-contain aspect-video transition-all duration-500 group-hover/image:scale-105"
                    />
                    <!-- Gradient overlay -->
                    <div class="absolute inset-0 bg-linear-to-t from-foreground/20 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                    <!-- Border effect -->
                    <div class="absolute inset-0 border-2 border-transparent group-hover/image:border-primary/30 transition-all duration-300 rounded-lg"></div>
                  </div>
                </div>
              </div>
            </div>
          </AnimatedSection>
        ))}
        </div>
      ) : (
        <div class="py-24 text-center">
          <AnimatedSection>
            <div class="inline-block">
              <div class="text-6xl mb-6 opacity-50">ðŸ“­</div>
              <h3 class="font-display text-2xl mb-4">No Projects Yet</h3>
              <p class="text-foreground/60">Projects coming soon. Stay tuned!</p>
            </div>
          </AnimatedSection>
        </div>
      )}
    </div>
  </section>

  <!-- Tools & Technologies -->
  <section class="section-padding">
    <div class="container-site max-w-5xl">
      <AnimatedSection className="mb-16">
        <h2 class="software-section-title font-display text-4xl md:text-5xl">Tools & Technologies<span style="color: #001489;">.</span></h2>
      </AnimatedSection>

      <div class="space-y-8">
        <AnimatedSection delay={100}>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
            {Object.entries(tools).map(([category, items]) => (
              <div class="software-tool-category">
                <h3 class="font-display text-lg mb-4 text-foreground/80 capitalize">
                  {category}
                </h3>
                <ul class="space-y-2">
                  {items.map((item: string) => (
                    <li class="text-foreground/70 text-sm font-medium">{item}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section Animations */
  .software-eyebrow {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.2s forwards;
  }

  .software-heading {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.3s forwards;
  }

  .software-description {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.4s forwards;
  }

  .software-divider {
    opacity: 0;
    animation: fadeIn 0.6s ease 0.5s forwards;
  }

  .software-divider > div {
    transform: scaleX(0);
    animation: scaleInX 0.8s cubic-bezier(0.25, 0.1, 0.25, 1) 0.6s forwards;
    transform-origin: left;
  }

  /* Section Animations */
  .software-section-title {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.2s forwards;
  }

  .software-project-item {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  .software-tool-category {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  /* Keyframe Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scaleInX {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
</style>