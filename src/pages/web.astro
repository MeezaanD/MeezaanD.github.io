---
import Layout from "../layouts/Layout.astro";
import AnimatedSection from "../components/AnimatedSection.astro";

interface Project {
  title: string;
  liveLink: string;
}

const projects: Project[] = [
  { title: "Flash South Africa", liveLink: "https://flash.za.com/" },
  { title: "Flash Kenya", liveLink: "https://flash.ke/" },
  { title: "Flash Botswana", liveLink: "https://flash.co.bw/" },
  { title: "Flash Lighting Nigeria", liveLink: "https://flashlighting.ng/" },
  {
    title: "Flash Business Academy",
    liveLink: "https://flashbusinessacademy.co.za/",
  },
  { title: "Royal Decking", liveLink: "https://royaldecking.co.za/" },
  { title: "Domani Vista", liveLink: "https://domanivista.africa/" },
  { title: "Solar Watt Africa", liveLink: "https://solarwattafrica.co.za/" },
];

const tools = {
  development: ["Astro JS", "WordPress", "Bricks Builder", "Elementor"],
  design: ["Figma", "Excalidraw"],
  performance: ["Lighthouse", "GTmetrix", "WebPageTest"],
  analytics: ["SEMrush", "Google Analytics", "Seobility"],
};
---

<Layout
  title="Web Development â€“ Portfolio"
  description="Every website has a purpose and an audience. I build web experiences that prioritize the user â€” fast, accessible, and designed to convert. From business sites to creative portfolios, each project is tailored to its goals."
>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center pt-24">
    <div class="container-site max-w-5xl mx-auto px-6">
      <!-- Eyebrow -->
      <p
        class="web-eyebrow text-[10px] md:text-xs tracking-[0.3em] uppercase mb-6 font-semibold"
        style="color: #001489;"
      >
        Web Development
      </p>

      <!-- Main Heading -->
      <h1
        class="web-heading font-display text-4xl md:text-5xl lg:text-5xl mb-8 leading-tight"
      >
        Crafting experiences for <span class="italic" style="color: #001489;">real people.</span>
        
      </h1>

      <!-- Philosophy Statement -->
      <p
        class="web-description text-foreground/60 text-base md:text-lg lg:text-xl max-w-3xl mb-10 leading-relaxed"
      >
        Every website has a purpose and an audience. I build web experiences that prioritize the user â€” fast, accessible, and designed to convert. From business sites to creative portfolios, each project is tailored to its goals.
      </p>

      <!-- Divider -->
      <div class="web-divider mb-16">
        <div class="w-12 h-0.5" style="background-color: #001489;"></div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="section-padding bg-muted">
    <div class="container-site max-w-5xl">
      <AnimatedSection className="mb-20">
        <h2 class="web-section-title font-display text-4xl md:text-5xl">
          Projects<span style="color: #001489;">.</span>
        </h2>
      </AnimatedSection>

      {projects.length > 0 ? (
        <div class="space-y-8">
        {
          projects.map((project, index) => (
            <AnimatedSection delay={index * 100} className="web-project-item">
              <a
                href={project.liveLink}
                target="_blank"
                rel="noopener noreferrer"
                class="block group border-b border-foreground/10 pb-6 transition-all hover:border-primary/50"
              >
                <div class="flex items-center justify-between gap-4">
                  <h3 class="font-display text-xl md:text-2xl group-hover:text-primary transition-colors">
                    {project.title}
                  </h3>
                  <svg
                    class="w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </div>
              </a>
            </AnimatedSection>
          ))
        }
        </div>
      ) : (
        <div class="py-24 text-center">
          <AnimatedSection>
            <div class="inline-block">
              <div class="text-6xl mb-6 opacity-50">ðŸ“­</div>
              <h3 class="font-display text-2xl mb-4">No Projects Yet</h3>
              <p class="text-foreground/60">Projects coming soon. Stay tuned!</p>
            </div>
          </AnimatedSection>
        </div>
      )}
    </div>
  </section>

  <!-- Tools Section - Updated to match software.astro style -->
  <section class="section-padding">
    <div class="container-site max-w-5xl">
      <AnimatedSection className="mb-16">
        <h2 class="web-section-title font-display text-4xl md:text-5xl">
          Tools & Technologies<span style="color: #001489;">.</span>
        </h2>
      </AnimatedSection>

      <div class="space-y-8">
        <AnimatedSection delay={100}>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {Object.entries(tools).map(([category, items]) => (
              <div class="web-tool-category">
                <h3 class="font-display text-lg mb-4 text-foreground/80">
                  {category.charAt(0).toUpperCase() + category.slice(1)}
                </h3>
                <ul class="space-y-2">
                  {items.map((item: string) => (
                    <li class="text-foreground/70 font-medium text-sm">
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section Animations */
  .web-eyebrow {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.2s forwards;
  }

  .web-heading {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.3s forwards;
  }

  .web-description {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.4s forwards;
  }

  .web-divider {
    opacity: 0;
    animation: fadeIn 0.6s ease 0.5s forwards;
  }

  .web-divider > div {
    transform: scaleX(0);
    animation: scaleInX 0.8s cubic-bezier(0.25, 0.1, 0.25, 1) 0.6s forwards;
    transform-origin: left;
  }

  /* Section Animations */
  .web-section-title {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) 0.2s forwards;
  }

  .web-project-item {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  .web-tool-category {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
  }

  /* Keyframe Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scaleInX {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
</style>