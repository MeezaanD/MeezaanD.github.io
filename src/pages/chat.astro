---
import Layout from "../layouts/Layout.astro";
import AnimatedSection from "../components/AnimatedSection.astro";
---

<Layout title="Chat">
  <AnimatedSection class="section-padding">
    <div class="container-site">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="font-display text-4xl md:text-6xl font-bold mb-6">
            Portfolio Assistant
          </h1>
          <p class="text-xl text-muted-foreground">
            AI-powered chat interface. Have a conversation with an AI that
            understands my work, experience, and philosophy.
          </p>
        </div>

        <div class="bg-white border rounded-2xl overflow-hidden shadow-lg">
          <div class="p-6 border-b">
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
              <span class="text-sm text-muted-foreground ml-4"
                >Full AI capabilities coming soon</span
              >
            </div>
          </div>

          <div class="p-6 h-100 overflow-y-auto bg-muted/30">
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div
                  class="w-8 h-8 rounded-full bg-primary flex items-center justify-center shrink-0"
                >
                  <span class="text-white text-sm">AI</span>
                </div>
                <div>
                  <p class="font-medium mb-2">
                    Hi! I'm an AI assistant that knows all about this portfolio.
                  </p>
                  <p class="text-muted-foreground">
                    I can tell you about the developer's background, projects,
                    skills, and philosophy. What would you like to know?
                  </p>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
                <button
                  class="p-4 text-left bg-white border rounded-lg hover:bg-muted/50 transition-colors"
                >
                  <p class="font-medium">Tell me about your background</p>
                </button>
                <button
                  class="p-4 text-left bg-white border rounded-lg hover:bg-muted/50 transition-colors"
                >
                  <p class="font-medium">What technologies do you work with?</p>
                </button>
                <button
                  class="p-4 text-left bg-white border rounded-lg hover:bg-muted/50 transition-colors"
                >
                  <p class="font-medium">What's your development philosophy?</p>
                </button>
                <button
                  class="p-4 text-left bg-white border rounded-lg hover:bg-muted/50 transition-colors"
                >
                  <p class="font-medium">How can we work together?</p>
                </button>
              </div>
            </div>
          </div>

          <div class="p-4 border-t">
            <div class="flex items-center gap-4">
              <input
                type="text"
                placeholder="Type your message..."
                class="flex-1 px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                disabled
              />
              <button
                class="px-6 py-3 bg-primary text-white rounded-lg hover:opacity-90 transition-opacity"
              >
                Send
              </button>
            </div>
            <p class="text-xs text-muted-foreground mt-2 text-center">
              This is a preview of the chat interface. Full AI capabilities
              coming soon.
            </p>
          </div>
        </div>
      </div>
    </div>
  </AnimatedSection>
</Layout>
