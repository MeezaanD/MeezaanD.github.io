---
import { getEntry } from "astro:content";

const hero = await getEntry("hero", "index");
const { name, headline, description } = hero!.data;
---

<section class="section-padding pt-40">
  <div class="container-site">
    <p class="text-base tracking-[0.3em] uppercase mb-4 text-primary font-bold">
      {name}
    </p>
    <h1
      class="font-display text-3xl md:text-4xl lg:text-5xl mb-6 leading-tight max-w-3xl"
    >
      {headline}
    </h1>
    <p class="text-foreground/50 text-base max-w-3xl mb-10 leading-relaxed">
      {description}
    </p>
    <a
      href="/Meezaan_Davids_CV.pdf"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white text-sm font-medium rounded hover:bg-primary/90 transition-colors"
    >
      Download CV
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 5v14M5 12l7 7 7-7"></path>
      </svg>
    </a>
  </div>
</section>
