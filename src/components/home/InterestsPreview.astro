---
import AnimatedSection from "../AnimatedSection.astro";

const interests = [
  {
    title: "Technology",
    description: "AI explorations",
    image: "https://cdn.prod.website-files.com/5eb11e0c357695deedcd9cda/642315e96efb2c2104ffa5ea_1521812998053.jpg",
    gradient: "from-pink-500 to-purple-600",
    size: "medium",
  },
  {
    title: "Football",
    description: "Blues forever",
    image:
      "https://res.cloudinary.com/chelsea-production/image/upload/c_fit,h_630,w_1200/v1/site-assets/Backgrounds/Screensaver",
    gradient: "from-blue-600 to-blue-800",
    size: "medium",
  },
  {
    title: "Racing",
    description: "Forza Ferrari",
    image:
      "https://cdn.ferrari.com/cms/network/media/img/resize/6373a38d0d6e6d0022cb67ff-2022-scuderia-ferrari?",
    gradient: "from-red-600 to-red-800",
    size: "medium",
  },
  {
    title: "Music",
    description: "Current vibes",
    image:
      "https://i.ytimg.com/vi/fCjLtgnYzTo/hq720.jpg?sqp=-oaymwEhCK4FEIIDSFryq4qpAxMIARUAAAAAGAElAADIQj0AgKJD&rs=AOn4CLCBFPoVFWE83nH1dHF1FeB33uR3Ww",
    gradient: "from-green-500 to-emerald-600",
    size: "large",
  },
  {
    title: "Running",
    description: "Miles logged",
    image:
      "https://media.istockphoto.com/id/1366052701/photo/shot-of-a-young-man-going-for-a-morning-run.jpg?s=612x612&w=0&k=20&c=Oy4DrbyUPxubuF5zIxBf4i-XjGZMvtZ3oQBeNh-5RD0=",
    gradient: "from-orange-500 to-orange-700",
    size: "medium",
  },
  {
    title: "Cinema",
    description: "Latest watches",
    image:
      "https://cdn.evt.com/wp-content/uploads/2024/10/25164302/IMAX-in-Queensgate-NZ-will-be-similar-to-Pacfic-Fair.jpg",
    gradient: "from-purple-600 to-indigo-700",
    size: "medium",
  },
];
---

<section class="section-padding bg-muted">
  <div class="container-site max-w-6xl mx-auto px-6">
    <AnimatedSection className="text-center mb-16">
      <p
        class="hero-eyebrow text-[10px] md:text-xs tracking-[0.3em] uppercase mb-6 font-semibold"
        style="color: #001489;"
      >
        Beyond Code
      </p>
      <h2 class="font-display text-4xl md:text-5xl lg:text-5xl mb-4">
        Life outside the terminal<span style="color: #001489;">.</span>
      </h2>
      <p class="text-center text-foreground/60 text-base md:text-lg">
        Building software is what I do. But life is rich with passions that
        shape who I am and bring balance to my work.
      </p>
    </AnimatedSection>

    <!-- Bento Grid Layout -->
    <div class="interests-grid max-w-6xl mx-auto">
      {
        interests.map((interest, index) => (
          <AnimatedSection
            delay={index * 100}
            className={`interest-item ${interest.size === "large" ? "large-item" : ""}`}
          >
            <div
              class="interest-card group block relative overflow-hidden rounded-lg h-full bg-background"
            >
              {/* Background Image with Overlay */}
              <div class="absolute inset-0">
                <img
                  src={interest.image}
                  alt={interest.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div
                  class={`absolute inset-0 bg-linear-to-br ${interest.gradient} opacity-60 group-hover:opacity-70 transition-opacity duration-300`}
                />
                <div class="absolute inset-0 bg-black/20" />
              </div>

              {/* Content */}
              <div class="relative h-full p-6 flex flex-col justify-end text-white">
                <h3 class="font-display text-2xl md:text-3xl mb-1 group-hover:translate-x-1 transition-transform">
                  {interest.title}
                </h3>
                <p class="text-sm opacity-80">{interest.description}</p>

                {/* Arrow Icon */}
                <div class="absolute top-6 right-6 opacity-0 group-hover:opacity-100 transition-all duration-300 transform group-hover:translate-x-1 group-hover:-translate-y-1">
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </AnimatedSection>
        ))
      }
    </div>

    <AnimatedSection delay={500} className="text-center mt-12">
      <!-- <a
        href="/interests"
        class="explore-link inline-flex items-center gap-2 font-medium group"
        style="color: #001489;"
      >
        Explore all interests
        <svg
          class="w-5 h-5 transition-transform group-hover:translate-x-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a> -->
    </AnimatedSection>
  </div>
</section>

<style>
  /* Bento Grid Layout */
  .interests-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    grid-auto-rows: 280px;
  }

  @media (max-width: 768px) {
    .interests-grid {
      grid-template-columns: 1fr;
      grid-auto-rows: 240px;
    }
  }

  /* Large item takes 2 columns */
  .large-item {
    grid-column: span 2;
  }

  @media (max-width: 768px) {
    .large-item {
      grid-column: span 1;
    }
  }

  /* Card Hover Effects */
  .interest-card {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .interest-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  /* Animation */
  .interest-item.in-view {
    animation: fadeInScale 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    opacity: 0;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Explore Link */
  .explore-link {
    position: relative;
  }

  .explore-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: currentColor;
    transition: width 0.3s ease;
  }

  .explore-link:hover::after {
    width: calc(100% - 2rem);
  }
</style>
